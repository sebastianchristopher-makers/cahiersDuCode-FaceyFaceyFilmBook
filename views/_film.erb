<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
  <%= erb :_header %>
</head>
<body>  
  <h1 style="text-align:center"><%= @title %></h1>
  <div style="text-align:center">
    <iframe width="420" height="315"
      src='<%= @src %>' frameborder="0" allowfullscreen>
    </iframe>
  </div>

  <div class="container" style="text-align:center">
  <h2>If you liked this, you may also like:</h2>
  <div id="myCarousel" class="carousel slide" data-ride="carousel" style="text-align:center;width: 250px; height:250px;">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">

      <div class="item active">
        <img src="https://image.tmdb.org/t/p/w780/<%= @recommendations[0].poster_path %>"  alt="<%= @recommendations[0].title %>" style="width:100%;">
        <div class="carousel-caption">
          <h3><%= @recommendations[0].title %></h3>
        </div>
      </div>

      <% @recommendations[1..-1].each do |recommendation| %>
      <div class="item">
        <img src="https://image.tmdb.org/t/p/w780/<%= recommendation.poster_path %>"  alt="<%= recommendation.title %>" style="width:100%;">
        <div class="carousel-caption">
          <h3><%= recommendation.title %></h3>
        </div>
      </div>
      <% end %>

    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
</body>
