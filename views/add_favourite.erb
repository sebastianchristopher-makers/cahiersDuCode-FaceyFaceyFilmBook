<%= erb :_header %>
<body>
  <h1 style="text-align:center">Add your favourite film</h1>
  <h5 style="text-align:center">(This will be the banner for your profile)</h5>

  <div style="text-align:center">
    <div style="display:inline-block">
      <input type="text" id="film">
      <button id="search" onclick="search()"><i class="fa fa-search"></i></button>
    </div>
  </div>
  <br>
  <p id="numFilms" style="text-align:center"></p>
  <div >
    <select id="films" style="display:block; margin: 0 auto;" onchange="getCardInfo()">
    </select>
  </div>
  <div class="card" style="width: 30rem;margin: 0 auto;float:none;margin-top:10px;margin-bottom: 10px;">
    <div class="card-body">
      <div class="row">
        <div class="col text-left">
          <h4 id="cardTitle" style="text-align:center"></h4>
          <br>
          <div style="height:50%; overflow-y: auto">
            <p style="font-size:12px" id="overView"></p>
          </div>
        </div>
        <div class="col text-right">
          <div id="cardPoster" style="text-align:right"></div>
          <img id="posterImg"></img>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="col text-center">
          <button type="button" class="btn btn-outline-primary" onclick="addFavouriteFilm()">Add favourite film</button>
        </div>
      </div>
    </div>
  </div>
</body>
